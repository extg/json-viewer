{
  "name": "Chrome DevTools JSON Viewer",
  "short_name": "JSON Viewer",
  "offline_enabled": true,
  "icons": {
    "16": "static/logo.png",
    "48": "static/logo.png",
    "128": "static/logo.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*/*.json"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "static/logo.png",
      "38": "static/logo.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; style-src 'self' 'unsafe-inline'"
}
